@model Beneficiario

@{
    ViewData["Title"] = "Validar prerrequisitos de compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Validar prerrequisitos de compra</h2>

<form asp-action="Validar">
    <div class="form-horizontal">
        <hr />
       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
    <label class="col-md-2 control-label">Identificaci&oacute;n Beneficiario</label>
    <div class="col-md-10">
        <input asp-for="identificacion" class="form-control" placeholder="Identificaci&oacute;n del beneficiario"/>
        <span asp-validation-for="identificacion" class="text-danger"></span>
    </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Validar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

