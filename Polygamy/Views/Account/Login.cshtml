@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model Usuario

@{
    ViewData["Title"] = "Ingresar";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="nombreUsuario" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="nombreUsuario" class="form-control" placeholder="Nombre de Usuario"/>
                        <span asp-validation-for="nombreUsuario" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="contrasena" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="contrasena" class="form-control" type="password" placeholder="Contraseña"/>
                        <span asp-validation-for="contrasena" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Ingresar</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
