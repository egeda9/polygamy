@model IEnumerable<Polygamy.Models.Afiliado>

@{
    ViewData["Title"] = "Afiliado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Afiliado</h2>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Identificaci&oacute;n
                </th>
                <th>
                    Nombres
                </th>
                <th>
                    Apellidos
                </th>
                <th>
                    N&uacute;mero Tel&eacute;fono
                </th>
                <th>
                    Email
                </th>
                <th>
                    Direcci&oacute;n de Residencia
                </th>
                <th>
                    Ciudad de Residencia
                </th>
                <th>
                    Cupo (COP)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numeroTelefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccionResidencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ciudadResidencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cupo)
            </td>
        </tr>
}
    </tbody>
</table>
