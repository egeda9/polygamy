@if (ViewBag.Messages != null)
{
    @foreach (var mensaje in ViewBag.Messages)
    {
        <div class="alert alert-@mensaje.AlertType alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <p><strong>@mensaje.AlertTitle</strong> @mensaje.AlertMessage</p>
        </div>
    }
}

